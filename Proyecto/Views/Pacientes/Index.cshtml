@model List<Proyecto.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">👥 Listado de Pacientes</h2>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-person-plus-fill"></i> Nuevo Paciente
        </a>
    </div>

    <div class="row g-4">
        @foreach (var paciente in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-1">@paciente.Nombre</h5>
                        <p class="mb-1"><strong>Edad:</strong> @paciente.Edad años</p>
                        <p class="mb-1"><strong>Género:</strong> @paciente.Genero</p>
                        <p class="mb-3"><strong>Teléfono:</strong> @paciente.Telefono</p>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Details" asp-route-id="@paciente.Id" class="btn btn-sm btn-outline-primary" title="Ver detalles">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@paciente.Id" class="btn btn-sm btn-outline-warning" title="Editar paciente">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@paciente.Id" class="btn btn-sm btn-outline-danger" title="Eliminar paciente">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
