@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mb-5">
    <h1 class="display-5 fw-bold">
        <i class="bi bi-hospital text-danger me-2"></i> Bienvenido al Sistema de Gestión del Consultorio Médico
    </h1>
    <p class="lead text-secondary">Administra pacientes, citas médicas, recetas y expedientes clínicos desde un solo lugar.</p>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4 text-center">

    <div class="col">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-person-vcard fs-1 text-primary"></i>
                <h5 class="card-title mt-2">Pacientes</h5>
                <p class="card-text">Registrar, editar o visualizar pacientes.</p>
                <a asp-controller="Pacientes" asp-action="Index" class="btn btn-primary"
                   onclick="mostrarInfo('Pacientes', 'Desde aquí puedes gestionar toda la información de los pacientes.')">
                    Ir a Pacientes
                </a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-calendar-check fs-1 text-success"></i>
                <h5 class="card-title mt-2">Citas</h5>
                <p class="card-text">Agendar y gestionar citas médicas.</p>
                <a asp-controller="Citas" asp-action="Index" class="btn btn-success"
                   onclick="mostrarInfo('Citas', 'Aquí puedes ver, programar y administrar citas médicas.')">
                    Ver Citas
                </a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-journal-medical fs-1 text-info"></i>
                <h5 class="card-title mt-2">Expedientes</h5>
                <p class="card-text">Consultar el historial clínico de pacientes.</p>
                <a asp-controller="Expedientes" asp-action="Index" class="btn btn-info"
                   onclick="mostrarInfo('Expedientes', 'Consulta y organiza los historiales clínicos.')">
                    Ver Expedientes
                </a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-person-lines-fill fs-1 text-warning"></i>
                <h5 class="card-title mt-2">Doctores</h5>
                <p class="card-text">Gestionar la información de los doctores.</p>
                <a asp-controller="Doctores" asp-action="Index" class="btn btn-warning text-white"
                   onclick="mostrarInfo('Doctores', 'Edita o registra información de los doctores.')">
                    Ver Doctores
                </a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-file-earmark-medical fs-1 text-danger"></i>
                <h5 class="card-title mt-2">Recetas</h5>
                <p class="card-text">Emitir recetas médicas vinculadas a pacientes.</p>
                <a asp-controller="Recetas" asp-action="Index" class="btn btn-danger"
                   onclick="mostrarInfo('Recetas', 'Aquí puedes emitir recetas médicas.')">
                    Ir a Recetas
                </a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-graph-up fs-1 text-secondary"></i>
                <h5 class="card-title mt-2">Reportes</h5>
                <p class="card-text">Ver estadísticas y reportes de gestión.</p>
                <a asp-controller="Reportes" asp-action="Index" class="btn btn-secondary"
                   onclick="mostrarInfo('Reportes', 'Visualiza reportes y estadísticas del consultorio.')">
                    Ver Reportes
                </a>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        function mostrarInfo(titulo, mensaje) {
            Swal.fire({
                title: titulo,
                text: mensaje,
                icon: 'info',
                confirmButtonColor: '#0d6efd'
            });
        }
    </script>
}
