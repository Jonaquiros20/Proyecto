@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mb-5">
    <h1 class="display-5 fw-bold">Bienvenido al Sistema de Gestión del Consultorio Médico</h1>
    <p class="lead">Administra pacientes, citas médicas, recetas y expedientes clínicos desde un solo lugar.</p>
</div>

<div class="row g-4 text-center">
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-person-vcard fs-1 text-primary"></i>
                <h5 class="card-title mt-2">Pacientes</h5>
                <p class="card-text">Registrar, editar o visualizar pacientes del consultorio.</p>
                <a asp-controller="Pacientes" asp-action="Index" class="btn btn-primary">Ir a Pacientes</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-calendar-check fs-1 text-success"></i>
                <h5 class="card-title mt-2">Citas</h5>
                <p class="card-text">Agendar y gestionar citas médicas de forma fácil.</p>
                <a asp-controller="Citas" asp-action="Index" class="btn btn-success">Ver Citas</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-journal-medical fs-1 text-info"></i>
                <h5 class="card-title mt-2">Expedientes</h5>
                <p class="card-text">Consultar el historial clínico y tratamientos de pacientes.</p>
                <a asp-controller="Expedientes" asp-action="Index" class="btn btn-info">Ver Expedientes</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-person-lines-fill fs-1 text-warning"></i>
                <h5 class="card-title mt-2">Doctores</h5>
                <p class="card-text">Gestionar información de los doctores del consultorio.</p>
                <a asp-controller="Doctores" asp-action="Index" class="btn btn-warning text-white">Ver Doctores</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-file-earmark-medical fs-1 text-danger"></i>
                <h5 class="card-title mt-2">Recetas</h5>
                <p class="card-text">Emitir recetas médicas vinculadas a citas o pacientes.</p>
                <a asp-controller="Recetas" asp-action="Index" class="btn btn-danger">Ir a Recetas</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-graph-up fs-1 text-secondary"></i>
                <h5 class="card-title mt-2">Reportes</h5>
                <p class="card-text">Visualizar estadísticas de citas, pacientes y más.</p>
                <a asp-controller="Reportes" asp-action="Index" class="btn btn-secondary">Ver Reportes</a>
            </div>
        </div>
    </div>
</div>
