@model List<Proyecto.Models.Receta>

@{
    ViewData["Title"] = "Recetas";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">📝 Recetas Médicas</h2>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-file-earmark-plus"></i> Nueva Receta
        </a>
    </div>

    <div class="row g-4">
        @foreach (var receta in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-1">@receta.Paciente</h5>
                        <p class="mb-1"><strong>Doctor:</strong> @receta.Doctor</p>
                        <p class="mb-1"><strong>Medicamento:</strong> @receta.Medicamento</p>
                        <p class="mb-3"><strong>Fecha:</strong> @receta.Fecha.ToString("dd/MM/yyyy")</p>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Details" asp-route-id="@receta.Id" class="btn btn-sm btn-outline-primary" title="Ver detalles">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@receta.Id" class="btn btn-sm btn-outline-warning" title="Editar receta">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@receta.Id" class="btn btn-sm btn-outline-danger" title="Eliminar receta">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
