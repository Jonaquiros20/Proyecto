@model List<Proyecto.Models.Doctor>

@{
    ViewData["Title"] = "Doctores";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">👨‍⚕️ Listado de Doctores</h2>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-person-plus"></i> Nuevo Doctor
        </a>
    </div>

    <div class="row g-4">
        @foreach (var doctor in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-1">@doctor.Nombre</h5>
                        <p class="mb-1"><strong>Especialidad:</strong> @doctor.Especialidad</p>
                        <p class="mb-1"><strong>Correo:</strong> @doctor.Correo</p>
                        <p class="mb-3"><strong>Teléfono:</strong> @doctor.Telefono</p>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-primary" title="Ver detalles">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-warning" title="Editar doctor">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-sm btn-outline-danger" title="Eliminar doctor">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
