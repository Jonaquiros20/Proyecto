<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Consultorio Médico</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

   
</head>
<body>
    <div id="loader-wrapper">
        <div class="loader-box text-center">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p>Cargando contenido, por favor espere...</p>
        </div>
    </div>

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #dee2e6;">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse-fill text-danger me-2"></i>Consultorio Médico
                </a>

                <div class="d-flex align-items-center ms-auto">
                    <button id="toggleTheme" class="btn btn-outline-secondary btn-sm me-3" title="Cambiar tema">
                        <i class="bi bi-moon-fill" id="iconoTema"></i>
                    </button>
                    <div id="fechaHoraResumen" class="text-muted small pe-3 user-select-none d-flex align-items-center"
                         role="button" onclick="mostrarFechaHoraCompleta()" title="Haz clic para ver más detalle">
                        <i class="bi bi-clock me-1 text-primary fs-6"></i>
                        <span id="horaTextoNavbar"></span>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Cuerpo -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
